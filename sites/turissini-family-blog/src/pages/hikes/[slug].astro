---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/Base.astro';

export async function getStaticPaths() {
  const trips = await getCollection('hikes');
  return trips.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<style>
  .caption {
    font-size: 0.8rem;
    opacity: 0.5;
    padding: 5px 1rem;
  }

  header {
    padding: 0rem 0;
  }

  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
    p {
      margin: 0 0 1.3rem;
    }

    h2 {
      line-height: 1.2;
      margin: 2em 0 0.5em;
      font-weight: bold;
      font-size: 1.4rem;
      padding-bottom: 0.5em;
    }

    figure {
      margin: 2em 0;
      
      img {
        width: 100%;
        height: auto;
        border-radius: 4px;
      }
    }

    figcaption {
      font-size: 0.8rem;
      padding: 5px 0;
      margin: 0;
      color: #646769;
    }
  }

  h1 {
    line-height: 1;
    font-size: 2.1rem;
    text-align: right;
    padding: 1rem;
    font-weight: bold;
    position: absolute;
    z-index: 2;
    color: #fff;
    background: rgba(0 0 0 / 80%);
    top: 65%;
    margin-left: 3rem;
    line-height: 1.4;
    right: 2rem;
    min-width: 60%;
  }

  header {
    position: relative;
    z-index: 1;
    height: 100vh;
  }

  .hero {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
  }

  .hero-img {
    object-fit: cover;
    width: 100%;
    height: 90%;
  }

</style>

<BaseLayout hideHeader title={entry.data.title}>
  <article>
    <header>
      <h1 class="entry-title">{entry.data.title}</h1>
      <div class="hero">
        <img class="hero-img" alt="" height={entry.data.image.height} width={entry.data.image.width} src={entry.data.image.src} />
        <p class="caption">{entry.data.image.text}</p>
      </div>
    </header>
    <main>
      <Content />
    </main>
  </article>
</BaseLayout>


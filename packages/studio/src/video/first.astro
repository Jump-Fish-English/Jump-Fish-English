<style>
  .ball {
    height: 20px;
    width: 20px;
    background: red;
    border-radius: 0px;
    animation: move-ball 0.4s forwards;
  }

  .square {
    height: 20px;
    width: 20px;
    background: black;
    border-radius: 20px;
    opacity: 0;
    animation: show-ball 1s forwards;
    animation-delay: 600ms;
  }

  @keyframes show-ball {
    0% {
      opacity: 0;
    }

    100% {
      opacity: 1;
    }
  }

  @keyframes move-ball {
    0% {
      transform: translateX(0px);
    }

    100% {
      transform: translateX(100px);
    }
  }
</style>
<div class="ball"></div>
<div class="square"></div>
